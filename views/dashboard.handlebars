<h2>Dashboard</h2>
<div id="stuff">
	<h4>Welcome
    {{#if username}}
    <em>{{username}}</em>
    {{/if}}
  </h4>

	{{#each stuff}}
	<p>{{ greeting }} {{ subject }}</p>
	{{/each}}

	<hr>

<form id='form'>
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input name="title" type="txt" class="form-control" id="new-title" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input name="name" type="txt" class="form-control" id="new-name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Summary</label>
    <input name="summary" type="txt" class="form-control" id="new-summary" placeholder="Summary">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Date</label>
    <input name="date" type="txt" class="form-control" id="new-date" placeholder="Date">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Author</label>
    <input name="author" type="txt" class="form-control" id="new-author" placeholder="Author">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Image</label>
    <input name="image" type="txt" class="form-control" id="new-image" placeholder="Image">
  </div>
  <button type="submit" class="btn btn-primary btn-lg">Add New Article</button>
</form>
</div>

